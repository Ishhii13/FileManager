<Window x:Class="FileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*"/>

            <!-- This is where the list of things appear -->
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <Canvas Height="140" Margin="0,1,0,107">
            <Rectangle HorizontalAlignment="Left" Height="100" VerticalAlignment="Center" Width="713" Fill="#FF222222" Canvas.Left="44" Canvas.Top="19"/>
        </Canvas>

        <!--Reading Status Filter-->
        <Canvas Height="85" Margin="0,138,0,25">
            <Button Content="All" HorizontalAlignment="Left" Height="33" Margin="59,21,0,0" Grid.Row="1" VerticalAlignment="Top" Width="61" FontSize="15"/>
            <Line StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeThickness="5" X1="10" Y1="10" X2="65" Y2="10" Stroke="Black" Canvas.Left="52" Canvas.Top="54" Width="69" Height="15" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Button Content="Favorite" HorizontalAlignment="Left" Height="33" Margin="129,21,0,0" Grid.Row="1" VerticalAlignment="Top" Width="90" FontSize="15"/>
            <Button Content="Current" HorizontalAlignment="Left" Height="33" Margin="227,21,0,0" Grid.Row="1" VerticalAlignment="Top" Width="89" FontSize="15"/>
            <Button Content="Completed" HorizontalAlignment="Left" Height="33" Grid.Row="1" VerticalAlignment="Top" Width="108" FontSize="15" Margin="325,21,0,0"/>
            <Button Content="On Hold" HorizontalAlignment="Left" Height="33" Margin="443,21,0,0" Grid.Row="1" VerticalAlignment="Top" Width="96" FontSize="15"/>
            <Button Content="Dropped" HorizontalAlignment="Left" Height="33" Margin="548,21,0,0" Grid.Row="1" VerticalAlignment="Top" Width="91" FontSize="15"/>
            <Button Content="Planning" HorizontalAlignment="Left" Height="33" Margin="647,21,0,0" Grid.Row="1" VerticalAlignment="Top" Width="91" FontSize="15"/>
        </Canvas>
        <Rectangle HorizontalAlignment="Center" Height="52" Margin="0,6,0,0" VerticalAlignment="Top" Width="720" Grid.Row="1" Fill="#FF222222"/>
        <Label Content="List Title" HorizontalAlignment="Center" Margin="0,17,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="#F1F1F1F1" FontWeight="Bold" FontSize="15"/>

        <!-- Column Titles -->
        <Canvas Height ="45" Width="688"  Grid.Row="1" Margin="56,63,56,145">
            <Label Content="#" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Canvas.Left="15" Canvas.Top="10" FontSize="15"/>
            <Label Content="Title" Canvas.Left="130" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <Label Content="Author" Canvas.Left="305" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <Label Content="Progress" Canvas.Left="485" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
        </Canvas>

    </Grid>
</Window>
