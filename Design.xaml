<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- List of Button Styles-->
    <Style x:Key="GeneralBTN" TargetType="Button">
        <Setter Property="Background" Value="SeaGreen"/>
        <Setter Property="Foreground" Value="#F1F1F1F1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="TextElement.FontWeight" Value="ExtraBold"/>
    </Style>

    <Style x:Key="StatusBTN" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="TextElement.FontWeight" Value="Light"/>
    </Style>

    <Style x:Key="FavBTN" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style x:Key="DateBTN" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="TextElement.FontWeight" Value="Medium"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="SeaGreen"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="TextElement.FontWeight" Value="Bold"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#FF0A4D0C"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>