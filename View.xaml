<UserControl x:Class="FileManager.View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <Label x:Name="lbl_ID" Content="ID" HorizontalAlignment="Left" Margin="400,49,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbx_Title" HorizontalAlignment="Left" Margin="400,92,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" Width="255"/>
        <TextBox x:Name="tbx_PageStatus" HorizontalAlignment="Left" Margin="400,132,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="97"/>
        <TextBox x:Name="tbx_PageCount" HorizontalAlignment="Left" Margin="553,132,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="102"/>
        <Label Content="/" HorizontalAlignment="Left" Margin="520,128,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbx_Status" HorizontalAlignment="Left" Margin="400,177,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbx_StartDate" HorizontalAlignment="Left" Margin="400,217,0,0" TextWrapping="Wrap" Text="Start Date" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbx_LastDate" HorizontalAlignment="Left" Margin="400,260,0,0" TextWrapping="Wrap" Text="Last Date" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_Favorite" Content="Favorite" HorizontalAlignment="Left" Margin="400,300,0,0" VerticalAlignment="Top" Width="60" Click="btn_Favorite_Click"/>
        <Label x:Name="lbl_Heart" Content="♡" HorizontalAlignment="Left" Margin="465,289,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button x:Name="btn_book1" Content="Book 1" HorizontalAlignment="Left" Margin="400,24,0,0" VerticalAlignment="Top" Click="btn_book1_Click"/>
        <Button x:Name="btn_book2" Content="Book 2" HorizontalAlignment="Left" Margin="456,24,0,0" VerticalAlignment="Top" Click="btn_book2_Click"/>
        <Button x:Name="btn_Add" Content="Add" HorizontalAlignment="Left" Margin="409,357,0,0" VerticalAlignment="Top" Click="btn_Add_Click"/>
        <Button x:Name="btn_Edit" Content="Edit" HorizontalAlignment="Left" Margin="460,357,0,0" VerticalAlignment="Top" Click="btn_Edit_Click"/>
        <Button x:Name="btn_Delete" Content="Delete" HorizontalAlignment="Left" Margin="520,357,0,0" VerticalAlignment="Top" Click="btn_Delete_Click"/>
    </Grid>
</UserControl>
